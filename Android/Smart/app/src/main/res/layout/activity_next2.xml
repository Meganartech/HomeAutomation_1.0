<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meganar.smart.nextActivity2"
    android:background="@color/white"
    android:orientation="vertical">

    <Button
        android:id="@+id/button10"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="115dp"
        android:background="@drawable/roundconer"
        android:backgroundTint="@color/blue"
        android:text="Next"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@id/textView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="243dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="88dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bluetoothscan" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/button10"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="Wait for the buzzer to emit three beeps. These three beeps indicate the device search started."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="80dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/blue"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

</RelativeLayout>
